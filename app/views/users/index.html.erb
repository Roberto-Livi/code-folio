<h1>Hello</h1>

<%= form_tag users_path, :method => "get" do %>
    <%= label_tag(:search, "Enter Username: ") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :name => nil) %>
<% end %>

<p>
    <% if @searched_user %>
    <%= @searched_user.username %>
    <% end %>
</p>

<p>
    <%= link_to "Your Page", users_path(@user) %>
</p>