<%= form_for(@user) do |f| %>
    <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>

    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>

    <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </p>

    <p>
        <h3>Profile Information</h3>
    </p>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :education %>
        <%= f.text_area :education %>
    </p>

    <p>
        <%= f.label :skills %>
        <%= f.text_area :skills %>
    </p>

    <p>
        <%= f.submit "Submit" %>
    </p>

<% end %>

