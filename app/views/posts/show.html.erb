

<h1><%= @post.title %></h1>

<p>
    <%= @post.content %>
</p>

<p>
    by <%= @user.username %>
</p>

<p>
    <%= render 'comments/form' %>
</p>

<p>
    <% @post.comments.each do |comment| %>
        <%= comments_username(comment.user_id) %><br>
        <%= comment.content %><br><br>

        <p>
            <% if current_user == comments_user_instance(comment.user_id) || current_user == @user %>
                <%= link_to 'Delete Comment', comment, :method => :delete, :confirm => "Are you sure?" %>
            <% end %><br><br><br><br><br>
        </p>

    <% end %>
</p>

<% if current_user == @user %>

<p>
    <%= link_to 'Delete Post', @post, :method => :delete, :confirm => "Are you sure?", :style => "background-color: #CC0000;" %>
</p><br><br>

<% end %>

<p>
    <%= link_to "Go back to your page", user_path(current_user) %>
</p>
