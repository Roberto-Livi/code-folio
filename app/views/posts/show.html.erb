

<h1><%= @post.title %></h1>

<p>
    <%= @post.content %>
</p>

<p>
    by <%= @user.username %>
</p>

<% if current_user == @user %>

<p>
    <%= link_to 'Delete Post', @post, :method => :delete, :confirm => "Are you sure?" %>
</p>

<% end %>

<p>
    <p>
        <%= link_to "Go back to your page", user_path(current_user) %>
    </p>
</p>